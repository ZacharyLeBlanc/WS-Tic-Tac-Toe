{
  "name": "ttt-backend",
  "version": "1.0.1",
  "description": "Tic tac toe app with websockets",
  "main": "dist/index.js",
  "author": "Zachary LeBlanc",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "node .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "dev": "nodemon .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --write src/*.ts src/**/*.ts",
    "precommit": "lint-staged && yarn run test:ci"
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-errors": "^1.7.3",
    "morgan": "^1.9.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.9.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.4",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --rule 'no-console: 2' --rule 'no-debugger: 2' --fix",
      "prettier --write"
    ]
  }
}
